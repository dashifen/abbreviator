{
  "name": "dashifen/abbreviator",
  "description": "A WordPress plugin that allows you to define abbreviations and their meaning which are automatically added to the content of a post when encountered for the first time.",
  "minimum-stability": "stable",
  "type": "wordpress-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "David Dashifen Kees",
      "email": "dashifen@dashifen.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Dashifen\\Abbreviator\\": "src"
    }
  },
  "require": {
    "php": ">=7.4",
    "ext-dom": "*",
    "ext-json": "*",
    "dashifen/wp-handler": "^10.2",
    "timber/timber": "^1.18",
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
